<h1 class="mb-3"><i class="fa-solid fa-diagram-project"></i> Projects</h1> <!-- main heading "project" icon, mb-3 for spacing below -->

<div class="row g-3"> <!-- Bootstrap grid row w space between columns size 3 -->
  <% projects.forEach(function(p) { %> <!-- ejs loop, goes through each project object in the 'projects' array -->
    <div class="col-md-4"> <!-- each project takes up 4/12 columns (so 3 per row on medium+ screens) -->
      <div class="card h-100"> <!-- Bootstrap card for styling; h-100 makes all cards equal height -->
        <div class="card-body"> <!-- container for the main content of the card -->
          <h5 class="card-title"><%= p.name %></h5> <!-- displays the project’s name -->
          <p class="card-text"><%= p.desc %></p> <!-- displays the project’s description -->
          <p class="text-muted"><i class="fa-solid fa-microchip"></i> <%= p.tech.join(', ') %></p> <!-- shows the skills, joined into a comma-separated list -->
        </div>
      </div>
    </div>
  <% }) %> <!-- ends the forEach loop -->
</div>
